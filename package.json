{
    "name": "realtyeaseai-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo dev",
        "dev:web": "npm run dev --workspace=@realtyeaseai/web",
        "dev:admin": "npm run dev --workspace=@realtyeaseai/admin",
        "dev:client": "npm run dev --workspace=@realtyeaseai/client",
        "dev:manager": "npm run dev --workspace=@realtyeaseai/manager",
        "dev:va": "npm run dev --workspace=@realtyeaseai/va",
        "build": "turbo build",
        "lint": "turbo lint",
        "type-check": "turbo type-check",
        "clean": "turbo clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.17",
        "baseline-browser-mapping": "^2.8.32",
        "postcss": "^8.5.6",
        "prettier": "latest",
        "tailwindcss": "^4.1.17",
        "tailwindcss-animate": "^1.0.7",
        "turbo": "^2.6.1",
        "typescript": "latest"
    },
    "packageManager": "pnpm@8.15.0"
}