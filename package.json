{
    "name": "realtyeaseai-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo dev",
        "dev:web": "turbo dev --filter=@realtyeaseai/web",
        "dev:app": "turbo dev --filter=@realtyeaseai/app",
        "build": "turbo build",
        "lint": "turbo lint",
        "type-check": "turbo type-check",
        "clean": "turbo clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.17",
        "baseline-browser-mapping": "^2.8.32",
        "postcss": "^8.5.6",
        "prettier": "^3.4.2",
        "tailwindcss": "^4.1.17",
        "tailwindcss-animate": "^1.0.7",
        "turbo": "^2.6.1",
        "typescript": "^5.7.2"
    },
    "pnpm": {
        "overrides": {
            "@auth/core": "0.41.1",
            "next": "16.0.5",
            "react": "19.0.0",
            "react-dom": "19.0.0"
        }
    },
    "packageManager": "pnpm@8.15.0"
}