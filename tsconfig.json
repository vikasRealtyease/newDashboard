{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@realtyeaseai/auth": [
                "./packages/auth/src"
            ],
            "@realtyeaseai/database": [
                "./packages/database/src"
            ],
            "@realtyeaseai/ui": [
                "./packages/ui/src"
            ],
            "@realtyeaseai/supabase": [
                "./packages/supabase/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        ".next",
        "out"
    ]
}